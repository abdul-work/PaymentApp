<ContentDialog x:ConnectionId='1'
    x:Class="Checkout.Custom_user_controls.QuickChip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Checkout.Custom_user_controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Is your card quick Chip?"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
                                                         
                                                             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RadioButton x:ConnectionId='2' x:Name="RadioButton_YES" Grid.Row="0" GroupName="one" Content="Yes"                              />
        <RadioButton x:ConnectionId='3' x:Name="RadioButton_NO" Grid.Row="1" GroupName="one" Content="No"                                 IsChecked="True"/>
    </Grid>
</ContentDialog>

